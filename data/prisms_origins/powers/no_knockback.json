{
    "type": "origins:multiple",

    "on_callback": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:execute_command",
            "command": "function prisms_origins:apply_knockback_resistance"
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "function prisms_origins:remove_knockback_resistance"
        }
    },

    "refresh_on_damage": {
        "type": "action_when_damage_taken",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "function prisms_origins:apply_knockback_resistance"
        },
        "cooldown": 1000
    },

    "name": "Immovable Object",
    "description": "You simply cannot be knocked back, unless you permit it."
}