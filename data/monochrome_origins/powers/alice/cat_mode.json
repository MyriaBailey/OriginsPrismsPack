{
    "type": "origins:multiple",
    "transformation": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "max_action": {
            "type": "origins:execute_command",
            "command": "trigger morph set 25"
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "trigger morph set 2"
                },
                {
                    "type": "origins:heal",
                    "amount": 10
                }
            ]
        }
    },
    "time_sneaking": {
        "type": "origins:resource",
        "min": 0,
        "max": 100,
        "max_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_transformation",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_transformation",
                "change": 1,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_transformation",
                "change": 0,
                "operation": "set"
            }
        }
    },
    "check_sneaking": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_time_sneaking",
            "change": 1,
            "operation": "add"
        },
        "falling_action": {
            "type": "origins:change_resource",
            "resource": "*:*_time_sneaking",
            "change": 0,
            "operation": "set"
        },
        "condition": {
            "type": "origins:sneaking"
        }
    },
    "clear_transformation": {
        "type": "origins:action_on_callback",
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "trigger morph set 2"
        }
    },
    "name": "Cat Mode",
    "description": "You can turn into a cat when sneaking for long enough!"
}